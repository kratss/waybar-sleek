[
{
    "name": "main",
    "id": "bar-1",
    "ipc": false,
    "passthrough": "false",

    "modules-left": [
	    "sway/workspaces",
	    "sway/mode",
        "sway/scratchpad"
        ],
    "modules-center": [
	    "clock"
        ],
    "modules-right": [
	    "tray", 
        "group/bt",
        "group/internet",
	    "group/mullvad",
        "inhibitor",
	    "sway/language",
        "group/wireplumber",
        "upower",
        "privacy",
	    "custom/panelactivate"
        ],
    
    "battery": {
        "format": "{icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ ", "ÔâÅ", "ÔâÄ"],
        "format-time": "{H}.{M}",
        "min-length": 3
        },
    "battery#drawer-details": {
        "format": "{time} Health: {health}% {capacity}% {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ ", "ÔâÅ", "ÔâÄ"],
        "format-time": "{H}.{M}"
        },
    "bluetooth#drawer-bt": {
	    "format": "{}",
        "format-connected": "{device_alias}",
	    "min-length": 3,
	    "on-click": "bluetooth toggle",
        "tooltip-format-connected": "{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}"
        },   
    "bluetooth#main": {
	    "format": "Ôäî",
        "format-connected": "Ôäî‚ö¨",
	    "min-length": 3,
	    "on-click": "bluetooth toggle",
        "tooltip": false
        },
    "custom/mullvad": {
        "exec": "mullvad status | head -n 1",
        "interval": 10
        },
    "custom/panelactivate": {
	    "format": " ü¢ê ",
	    "on-click-right": "swaymsg bar mode hide bar-0",
	    "on-click": "~/.config/waybar/modules/panel-toggle.fish"
        },
    "clock": {
	    "format": "{:%a, %d %b  %H:%M}",
	    "interval": 30,	
	    "on-click": "~/.config/waybar/modules/panel-toggle.fish",
        "on-click-right": "swaymsg bar mode hide bar-0",
	    "tooltip": false,
	    "tooltip-format": "<big>{:%Y %B}</big>\n<tt>{calendar}</tt>"
        },
    "inhibitor": {
	    "format": "ÔÉ¥",
        "min-length": 3,
        "tooltip": false,
	    "what": "idle"
	    },
    "group/bt": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 250,
            "transition-left-to-right": false
            },
        "modules": [
            "bluetooth#main",
            "bluetooth#drawer-bt"
            ]
        },
    "group/internet": {
        "drawer": {
            "transition-duration": 250,
            "transition-left-to-right": false
             },
        "modules": [
            "network",
            "network#drawer-internet"
            ],
        "orientation": "inherit"
        },
    "group/mullvad": {
        "drawer": {
            "transition-duration": 250,
            "transition-left-to-right": false,
            "children-class": "hidden"
            },
        "modules": [
            "network#mullvad",
            "custom/mullvad"
            ],
        "orientation": "inherit"
       },
    "group/wireplumber": {
         "drawer": {
            "transition-duration": 250,
            "transition-left-to-right": false
            },
        "modules": [
            "wireplumber",
            "wireplumber#drawer"
            ],
        "orientation": "inherit"
        },
    "network": {
        "format": "{}",
        "format-wifi": "Ôá´", 
        "format-ethernet": "{ifname}",
        "format-disconnected": "Ôá´",
        "format-disconnected": "Ôá´",
        "interface": "wlp54s0",
        "interval": 3600, //polling seemingly does nothing
	    "min-length": 3,
        "tooltip": false
        },
    "network#drawer-internet": {
        "format": "{ifname}",
        "format-wifi": "{essid}", 
        "format-ethernet": "{ifname}",
        "format-disconnected": "{}",
        "interface": "wlp54s0",
        "interval": 120,
        "min-length":3,
        "tooltip-format": "{}",
        "tooltip-format-wifi": "{essid}\rSignal Strength: {signalStrength}%",
        "tooltip-format-ethernet": "{ifname}",
        "tooltip-format-disconnected": "Disconnected"
        },

    "network#mullvad": {
        "interface": "wg0-mullvad",
	    "format": "üîìVPN OFF",
	    "format-disconnected": "üîìVPN OFF",
	    "format-ethernet": "ÔÄ£",
	    "min-length": 3,
	    "on-click": "mullvad connect",
        "tooltip": false
    },
    "privacy": {
        "icon-spacing": 4,
        "icon-size": 18,
        "transition-duration": 250,
        "modules": [
            {
           "type": "screenshare",
           "tooltip": true,
           "tooltip-icon-size": 24
           },
           {
           "type": "audio-in",
           "tooltip": true,
           "tooltip-icon-size": 24
           }
        ]
    },
    "sway/workspaces": {
        "disable-scroll-wraparound": true,
        "format": "{icon}",
        "format-icons": {
            "default": "‚óã",
            "focused": "‚óè"
            },
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": []
            },
        "window-rewrite": {}
        },
    "sway/language": {
    	"format": "{short}",
        "min-length": 3,
        "on-click": "swaymsg input type:keyboard xkb_switch_layout next",
        "tooltip": false
        },
    "sway/mode": {},
    "sway/scratchpad": {
        "format": "SP: {count}",
        "show-empty": false,
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "tray": {
        "spacing": 9,
        "show-passive-items": true
        },
    "upower": {
        "format": "",
        "format-alt": "{percentage} {time}",
        "hide-if-empty": false,
        "icon-size": 17,
 	    "native-path": "BAT0",
        "tooltip": true,
        "tooltip-padding": 20,
        "tooltip-spacing": 10
        },
    "wireplumber": {
        "format": "ÔÄ® {volume}%",
        "format-muted": "ÔÄ¶",
        "max-volume": 100,
        "min-length": 8,
        "on-click": "helvum"
        },
    "wireplumber#drawer": {
        "format": "{node_name}"
        }
}
]
